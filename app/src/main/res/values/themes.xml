<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Technicaltestwanderer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/primary_border</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_main</item>
        <item name="colorSecondaryVariant">@color/primary_main</item>
        <item name="colorOnSecondary">@color/primary_border</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Technicaltestwanderer" parent="Base.Theme.Technicaltestwanderer" />

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/danger_main</item>
        <item name="boxStrokeWidthFocused">@dimen/dp1</item>
        <item name="boxStrokeWidth">@dimen/dp1</item>
        <item name="boxStrokeErrorColor">@color/danger_main</item>
        <item name="boxStrokeColor">@color/primary_main</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp10</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp10</item>
    </style>

    <style name="ErrorTextAppearanceZeroFontSize" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/danger_main</item>
        <item name="android:textSize">0sp</item>
    </style>

